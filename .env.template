# Server Bot Environment Configuration
# ===================================

# REQUIRED: Discord Bot Token (different from trading bot)
SERVER_BOT_TOKEN=your_server_bot_token_here

# REQUIRED: Discord Server Configuration
DISCORD_GUILD_ID=your_guild_id_here

# VIP Upgrade System Configuration
VIP_UPGRADE_CHANNEL_ID=your_vip_upgrade_channel_id_here
VIP_ROLE_ID=your_vip_role_id_here
STAFF_NOTIFICATION_CHANNEL_ID=your_staff_notification_channel_id_here
FREE_SIGNALS_CHANNEL_ID=your_free_signals_channel_id_here

# Database Configuration (can use same as trading bot)
DATABASE_URL=sqlite:///server_management.db

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=server_bot.log

# Optional: Bot Configuration
BOT_PREFIX=!server 
BOT_DESCRIPTION=Zinrai Discord Server Management Bot

# Example Staff Invite Configuration (managed via commands)
# These are set up using the /setup_staff_invite command
# STAFF_MEMBER_1_INVITE_CODE=abc123
# STAFF_MEMBER_1_VANTAGE_LINK=https://vantage.com/ref/123
# STAFF_MEMBER_1_EMAIL_TEMPLATE=Subject: VIP Upgrade Request...

# Optional: Integration with Trading Bot
# TRADING_BOT_API_URL=https://your-trading-bot.railway.app

# ======================================
# TELEGRAM INTEGRATION (VIP Chat System)
# ======================================

# REQUIRED: Telegram App Configuration
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here

# VIP Chat System Configuration
VIP_CHAT_ENABLED=true

# Telegram Dummy Accounts (JSON format)
# Each account needs phone number and session name
TELEGRAM_DUMMY_ACCOUNTS=[
  {
    "phone": "+1234567890",
    "session_name": "vip_account_1",
    "active": true
  },
  {
    "phone": "+1234567891", 
    "session_name": "vip_account_2",
    "active": true
  }
]

# FastAPI Backend Configuration
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_WORKERS=1

# Session Management
VIP_SESSION_TIMEOUT_HOURS=72
MAX_CONCURRENT_SESSIONS=10

# Telegram VA Settings
# VA Configuration  
TELEGRAM_VA_USERNAME=your_va_telegram_username
VA_DISCORD_USER_ID=your_discord_user_id
TELEGRAM_SESSION_ENCRYPTION_KEY=your_32_char_encryption_key_here